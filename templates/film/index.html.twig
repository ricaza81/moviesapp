{% block body -%}
    <h1 style="margin: 80px 0 20px;">Film list</h1>
    <div class="row">
            {% for film in films %}
                    <div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                            <a href="{{ path('film_show', { 'id': film.id }) }}">
                                <img src="{{ asset('uploads/films/'~film.path) }}" alt="" style="width:100%;height:400px">
                            </a>
                            <div class="caption">
                                <p class="pull-right"><h4>Film crew:</h4>
                                {% for person in film.persons %}
                                        <a href="{{ path('persons_edit', { 'id': person.id }) }}" class="btn btn-default">{{ person.name~' '~person.surname~' '~person.roles.name }}</a>
                                {% endfor %}
                                </p>
                                <h4><a href="{{ path('film_show', { 'id': film.id }) }}">{{ film.title }}</a>
                                </h4>
                                <p>{{ film.description }}.</p>
                            </div>
                        </div>
                    </div>
            {% endfor %}
        </div>
