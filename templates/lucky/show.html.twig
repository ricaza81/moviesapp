{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="margin: 80px 0 20px;">Film</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ film.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ film.description }}</td>
            </tr>
               <tr>
                <th>Persons</th>
                <td>  {% for person in film.persons %}
                                        <a href="{{ path('persons_edit', { 'id': person.id }) }}" class="btn btn-default">{{ person.name~' '~person.surname~' '~person.roles.name }}</a>
                      {% endfor %}</td>
            </tr>
            <tr>
                <th>Yearpublication</th>
                <td>{{ film.yearPublication }}</td>
            </tr>
        </tbody>
    </table>

    
            <a href="{{ path('film_index') }}"  class="btn btn-primary">Back to the list</a>
  
            <a href="{{ path('film_edit', { 'id': film.id }) }}"  class="btn btn-success">Edit</a><br><br>
 
     
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-primary" value="Delete">
            {{ form_end(delete_form) }}

{% endblock %}
