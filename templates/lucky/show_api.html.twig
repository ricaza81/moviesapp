{% extends 'base.html.twig' %}

{% block body %}
    <h1 style="margin: 80px 0 20px;">Api Film</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ film.title }}</td>
            </tr>
            <tr>
                <th>Yearpublication</th>
                <td>{{ film.release_date }}</td>
            </tr>
            <tr>
                <th>Producer</th>
                <td>{{ film.producer }}</td>
            </tr>

             {% for result in film.characters %}
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <a href="" target="_blank"></a>
                        <p>Character: {{result}}
                        </p>
                         <hr>
                    </div>
                </div>
            </div>
            {% endfor %}

        </tbody>
    </table>
{% endblock %}
