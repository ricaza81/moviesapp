{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        <div class="row text-center" style="padding-top:120px">
            <div class="card">
                <div class="card-body">
                    <form action="{{ path('login') }}" method="post">
                        <a href="https://swapi.dev/" target="blank">
                        <img src="https://pipedream.com/s.v0/app_mE7hlb/logo/orig" style="width:180px;padding:20px" />
                        </a>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <br/>
                        <label for="username">Email: (try > swapi@dev.com)</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}"/>
                        <br/>
                        <label for="password" style="padding-right:33px;">Password: (try > 123456)</label>
                        <input type="password" id="password" name="_password"/>

                        {# If you want to control the URL the user is redirected to on success
                        <input type="hidden" name="_target_path" value="/account"/> #}
                        <br/><br/>
                        <button type="submit" class="btn btn-success" style="width:400px">Get the experience</button>
                    </form>
                </div>
            </div>
        </div>
{% endblock %}
